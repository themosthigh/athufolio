---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { links } from "../navigation.ts";

import { GithubIcon, MailIcon, LinkedinIcon } from "astro-feather";
import * as constants from "../consts";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <!-- Site links here  -->
    <div class="internal-links">
      {
        links.map((link) => (
          <HeaderLink href={link.value}>{link.label}</HeaderLink>
        ))
      }
    </div>

    <div class="social-links">
      <a href={constants.MY_GITHUB} target="_blank">
        <span class="sr-only">Peruse my Github repository</span>
        <GithubIcon />
      </a>
      <a href={constants.MY_LINKEDIN} target="_blank">
        <span class="sr-only">Check out my LinkedIn profile</span>
        <LinkedinIcon />
      </a>
      <a href={"mailto:" + constants.MY_EMAIL} target="_blank">
        <span class="sr-only">Send me an email</span>
        <MailIcon />
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
